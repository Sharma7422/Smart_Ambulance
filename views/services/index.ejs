<script>
  document.addEventListener("DOMContentLoaded", function() {
    gsap.registerPlugin(ScrollTrigger);

    // Fade-in and slide animation for section titles
    gsap.from(".home-section h1, .home1-section h1, .why-section h1, .how-it-works-section h2", {
      opacity: 0,
      y: 50,
      duration: 1,
      stagger: 0.3,
      ease: "power3.out",
      scrollTrigger: {
        trigger: ".home-section",
        start: "top 80%",
        toggleActions: "play none none none",
      }
    });

    // Fade-in for paragraphs
    gsap.from(".text-content p, .home1-text p, .why-section p", {
      opacity: 0,
      y: 30,
      duration: 1.2,
      stagger: 0.3,
      ease: "power3.out",
      scrollTrigger: {
        trigger: ".text-content",
        start: "top 85%",
        toggleActions: "play none none none",
      }
    });

    // Ambulance image sliding effect
    gsap.from(".ambulance-img, .ambulance-img1", {
      opacity: 0,
      x: 100,
      duration: 1.5,
      ease: "power2.out",
      scrollTrigger: {
        trigger: ".ambulance-img",
        start: "top 80%",
        toggleActions: "play none none none",
      }
    });

    // Feature cards appearing with a pop effect
    gsap.from(".feature-card", {
      opacity: 0,
      scale: 0.8,
      duration: 1.5,
      stagger: 0.2,
      ease: "elastic.out(1, 0.5)",
      scrollTrigger: {
        trigger: ".features-grid",
        start: "top 85%",
        toggleActions: "play none none none",
      }
    });

    // Steps section animation (How It Works)
    gsap.from(".step-card", {
      opacity: 0,
      y: 50,
      duration: 1,
      stagger: 0.3,
      ease: "back.out(1.7)",
      scrollTrigger: {
        trigger: ".steps",
        start: "top 90%",
        toggleActions: "play none none none",
      }
    });

  });
</script>


